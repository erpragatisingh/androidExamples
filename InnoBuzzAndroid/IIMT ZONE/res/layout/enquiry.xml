<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.84"
        android:background="@drawable/back" >

        <TextView
            android:id="@+id/stu_id"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="48dp"
            android:text="Serial No."
            android:textColor="#FFF8DC" />

        <TextView
            android:id="@+id/stu_name"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/stu_id"
            android:layout_below="@+id/stu_id"
            android:text="Name"
            android:textColor="#FFF8DC" />

        <TextView
            android:id="@+id/stu_date_of_birth"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/stu_name"
            android:layout_below="@+id/stu_name"
            android:text="D.O.B"
            android:textColor="#FFF8DC" />

        <TextView
            android:id="@+id/stu_mobile_no"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/stu_date_of_birth"
            android:layout_below="@+id/stu_date_of_birth"
            android:text="Mobile No."
            android:textColor="#FFF8DC" />

        <TextView
            android:id="@+id/stu_email_id"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/stu_mobile_no"
            android:layout_below="@+id/stu_mobile_no"
            android:text="Email Id"
            android:textColor="#FFF8DC" />

        <TextView
            android:id="@+id/stu_course"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/stu_email_id"
            android:layout_below="@+id/stu_email_id"
            android:text="Course"
            android:textColor="#FFF8DC" />

        <TextView
            android:id="@+id/stu_remark"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/stu_course"
            android:layout_below="@+id/stu_course"
            android:text="Remark"
            android:textColor="#FFF8DC" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/stu_id"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/stu_id" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/stu_name"
            android:layout_alignLeft="@+id/editText1"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/stu_name" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/stu_date_of_birth"
            android:layout_alignLeft="@+id/editText2"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/editText2"
            android:inputType="date" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/stu_mobile_no"
            android:layout_alignLeft="@+id/editText3"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/stu_mobile_no"
            android:inputType="number"
            android:maxLength="10" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/stu_email_id"
            android:layout_alignLeft="@+id/editText4"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/stu_email_id"
            android:inputType="textEmailAddress" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/stu_course"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/stu_email_id"
            android:layout_toRightOf="@+id/stu_email_id" />

        <EditText
            android:id="@+id/editText6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/stu_remark"
            android:layout_alignLeft="@+id/spinner1"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/stu_remark" />

        <Button
            android:id="@+id/button1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/stu_remark"
            android:layout_marginTop="31dp"
            android:layout_toLeftOf="@+id/editText6"
            android:background="#CC6600"
            android:text="Submit" />

        <Button
            android:id="@+id/button2"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button1"
            android:layout_alignBottom="@+id/button1"
            android:layout_alignParentRight="true"
            android:background="#CC6600"
            android:text="Cancel" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="menuCalling"
        android:src="@drawable/home" />

</LinearLayout>